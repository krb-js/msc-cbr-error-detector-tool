<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.HelloController"
            prefWidth="1200" prefHeight="720"
            style="-fx-background-color: #f9fafb;">

    <!-- =========================
         TOP: Header
    ========================== -->
    <top>
        <VBox spacing="6"
              style="-fx-background-color: #ffffff; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="14" right="16" bottom="12" left="16"/>
            </padding>

            <Label text="MSC CBR Error Detector">
                <font><Font size="26"/></font>
                <style>
                    -fx-text-fill: #111827;
                    -fx-font-weight: 700;
                </style>
            </Label>

            <Label text="Upload ZIP/TXT • Load code reference (source_value) • Validate NAD rules • Export Excel"
                   style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
        </VBox>
    </top>

    <!-- =========================
         LEFT: Actions panel
    ========================== -->
    <left>
        <VBox spacing="12"
              prefWidth="330" minWidth="280"
              style="-fx-background-color: #ffffff; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12;">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <Label text="Actions"
                   style="-fx-text-fill: #111827; -fx-font-size: 14px; -fx-font-weight: 700;"/>

            <Button fx:id="uploadButton"
                    text="Upload ZIP / TXT"
                    onAction="#handleUpload"
                    maxWidth="1.7976931348623157E308"
                    style="-fx-background-color: #2563eb; -fx-text-fill: #ffffff; -fx-font-weight: 700; -fx-background-radius: 10; -fx-padding: 10 14;"/>

            <Button fx:id="loadCodesButton"
                    text="Load Codes (CSV/XLSX)"
                    onAction="#handleLoadCodes"
                    maxWidth="1.7976931348623157E308"
                    style="-fx-background-color: #111827; -fx-text-fill: #ffffff; -fx-font-weight: 700; -fx-background-radius: 10; -fx-padding: 10 14;"/>

            <Separator/>

            <Label text="Codes"
                   style="-fx-text-fill: #111827; -fx-font-size: 14px; -fx-font-weight: 700;"/>

            <Label fx:id="codesStatusLabel"
                   text="Codes: Not loaded (expects column source_value)"
                   wrapText="true"
                   style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>

            <Separator/>

            <Label text="Validation"
                   style="-fx-text-fill: #111827; -fx-font-size: 14px; -fx-font-weight: 700;"/>

            <Button fx:id="analyzeButton"
                    text="Analyze Errors"
                    onAction="#checkAspectInCollection"
                    maxWidth="1.7976931348623157E308"
                    style="-fx-background-color: #1d4ed8; -fx-text-fill: white; -fx-font-weight: 700; -fx-background-radius: 10; -fx-padding: 10 14;"/>

            <Button fx:id="exportButton"
                    text="Export to Excel"
                    onAction="#exportToExcel"
                    maxWidth="1.7976931348623157E308"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: 700; -fx-background-radius: 10; -fx-padding: 10 14;"/>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Mini status note -->
            <Label fx:id="lblStatus"
                   text="Idle"
                   wrapText="true"
                   style="-fx-text-fill: #111827; -fx-font-size: 12px; -fx-font-weight: 700;"/>
            <Label fx:id="lblCounts"
                   text="Files: 0 • TIDs with errors: 0 • Total error types: 0"
                   wrapText="true"
                   style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
        </VBox>
    </left>

    <!-- =========================
         CENTER: Main split area
    ========================== -->
    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="14" right="16" bottom="16" left="16"/>
            </padding>

            <!-- Status card -->
            <HBox spacing="14"
                  style="-fx-background-color: #ffffff; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12;">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <Label text="Progress"
                           style="-fx-text-fill: #111827; -fx-font-size: 14px; -fx-font-weight: 700;"/>
                    <Label fx:id="progressLabel"
                           text="0 / 0"
                           style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
                </VBox>

                <VBox spacing="6" prefWidth="420">
                    <ProgressBar fx:id="progressBar" prefWidth="420" progress="0"/>
                    <Label fx:id="lblProgressDetail"
                           text="—"
                           style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>

            <SplitPane orientation="VERTICAL" dividerPositions="0.66" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: transparent;">
                <items>

                    <!-- Table card -->
                    <VBox spacing="10"
                          style="-fx-background-color: #ffffff; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12;">
                        <padding>
                            <Insets top="14" right="14" bottom="14" left="14"/>
                        </padding>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Uploaded Files"
                                   style="-fx-text-fill: #111827; -fx-font-size: 14px; -fx-font-weight: 700;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="Tip: TID is clickable"
                                   style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
                        </HBox>

                        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="filenameColumn" text="Filename" prefWidth="220" minWidth="160"/>
                                <TableColumn fx:id="tidColumn" text="TID" prefWidth="160" minWidth="120"/>
                                <TableColumn fx:id="unhCountColumn" text="UNH/NAD Count (UNH02 rules)" prefWidth="240" minWidth="160"/>
                                <TableColumn fx:id="documentIDColumn" text="UNH02 | Reference / NADQUAL=CODE" prefWidth="520" minWidth="260"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- Results card -->
                    <VBox spacing="10"
                          style="-fx-background-color: #ffffff; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12;">
                        <padding>
                            <Insets top="14" right="14" bottom="14" left="14"/>
                        </padding>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Results"
                                   style="-fx-text-fill: #111827; -fx-font-size: 14px; -fx-font-weight: 700;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                        </HBox>

                        <TextArea fx:id="resultsTextArea"
                                  wrapText="true"
                                  editable="false"
                                  VBox.vgrow="ALWAYS"
                                  style="-fx-font-family: Consolas; -fx-font-size: 12px;"/>
                    </VBox>

                </items>
            </SplitPane>
        </VBox>
    </center>

</BorderPane>